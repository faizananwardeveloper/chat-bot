<div class="message" data-user-id="<%= message.user_id %>">
  <div class="flex" data-message-direction>
    <div class="max-w-xs lg:max-w-md">
      <div class="text-xs text-gray-500 mb-1 ml-1" data-sender-name>
        <%= message.user.name %>
      </div>

      <div class="rounded-2xl px-4 py-2 shadow-sm" data-message-bubble>
        <div class="text-sm"><%= message.content %></div>
        <div class="text-xs mt-1 text-right" data-timestamp>
          <%= message.created_at.strftime("%H:%M") %>
        </div>
      </div>
    </div>
  </div>
</div>