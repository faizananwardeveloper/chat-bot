
<%#= "gta --- #{message.user_id} ---- #{sender.id}" %>
<%# if message.user_id != sender.id %>
<div class="broadcast-message" data-sender-id="<%= message.user_id %>" data-message-content="<%= message.content %>">
  <div class="flex justify-start">
    <div class="max-w-xs lg:max-w-md">
      <div class="text-xs text-gray-500 mb-1 ml-1">
        <%= message.user.name %>
      </div>

      <div class="bg-white text-gray-800 border border-gray-200 rounded-2xl px-4 py-2 shadow-sm">
        <div class="text-sm"><%= message.content %></div>
        <div class="text-xs mt-1 text-gray-400 text-right">
          <%= message.created_at.strftime("%H:%M") %>
        </div>
      </div>
    </div>
  </div>
</div>
<%# end %>
